<div class="row content-box">
  <div class="col-10">
    <p id="notice" class="flash-message"><%= notice %></p>
      <div class="card">
        <div class="card-header d-flex justify-content-between">
          <p class="h5"><strong><%= @menu.title %></strong></p>
          <div>
            <%= link_to(
                  fa_icon('cog'),
                  edit_menu_path(@menu)
                ) %>
            |
            <%= link_to(
                  fa_icon('times'),
                  menu_path(@menu),
                  method: :delete,
                ) %>
            |
            <%= link_to(
                  fa_icon('arrow-left'),
                  menus_path
                ) %>
          </div>
        </div>
        <div class="card-content p-4">
          <div class="row">
            <div class="col-6">
                <p>
                  <%= image_tag @menu.image.url(:medium) if @menu.image.present? %>
                </p>
            </div>
            <div class="col-6">
                  <p>
                    <strong>Display:</strong>
                    <%= @menu.display %>
                  </p>

                  <strong>Items:</strong>
                  <div class="tag-list">
                    <% @menu.items.order(:item_name).each do |item| %>
                      <%= item.item_name%>
                    <% end %>
                  </div>

                  <p class="mt-3"><strong>Description:</strong><br>
                  <%= @menu.description %></p>
            </div>
          </div>
          <hr>
          <div class="row menu-item-row">
          <div class="col-10 d-flex flex-wrap menu-item-container">
            <% @menu.items.each do |item| %>
              <div class="card border-dark menu-item-card">
                <div class="card-header pl-4  d-flex justify-content-between">
                  <div>
                    <h5 class="card-title"><%= item.item_name %></h5>
                  </div>
                  <div>
                    <%= link_to(
                          fa_icon('cog'),
                          edit_item_path(item)
                        ) %>
                    |
                    <%= link_to(
                          fa_icon('times'),
                          item, method: :delete
                        ) %>
                  </div>
                </div>
                <div class="image-placeholder">
                  <img class="card-img-top card-image" src="<%= item.image %>" alt="Card image cap">
                </div>
                <div class="card-body">

                  <p class="card-text">
                    <%= truncate(item.item_description, :length => 80) %>
                  </p>
                </div>
              </div>
            <% end %>
            </div>
          </div>
        </div>
    </div>
  </div>
  <div class="col-2 navsidebar">
    <%= render 'menus/navside'%>
  </div>
</div>
