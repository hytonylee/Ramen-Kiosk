<div class="row content-box">
  <div class="col-10 d-flex flex-wrap">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Title:</strong>

    <%= @menu.title %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= @menu.description %>
  </p>

  <div class="tag-list">
    <% @menu.items.order(:item_name).each do |item| %>
      <%= item.item_name%>
    </span>
  <% end %>
  </div>

  <p>
    <%= image_tag @menu.image.url(:large) if @menu.image.present? %>
  </p>

  <%= link_to 'Edit', edit_menu_path(@menu) %> |
  <%= link_to 'Back', menus_path %>
  </div>
  <div class="col-2 navsidebar">
    <%= render 'navside'%>
  </div>
</div>
